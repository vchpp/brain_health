
<section id="fh5co-feature">
  <div class="container">
    <div class="fh5co-spacer fh5co-spacer-lg"></div>
    <div class="row">
			<div class="col-md-12">
      <%= form_with(model: message) do |form| %>
        <% if message.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

            <ul>
              <% message.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div id="fh5co-tab-feature" class="fh5co-tab text-center">
          <ul class="resp-tabs-list hor_1">
            <li> English (en)</li>
            <li> Korean (ko)</li>
          </ul>
          <div class="resp-tabs-container hor_1">
            <div>
              <div class="row">
                <div class="col-md-12">
                  <div class="field form-group">
                    <!--<%= form.label :en_name %>-->
                    <%= form.text_field :en_name, placeholder: "Title", class: "message-title" %>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="field form-group">
                    <!--<%= form.label :en_content %>-->
                    <%= form.rich_text_area :en_content, placeholder: "Content"  %>
                  </div>
                </div>
              </div>
            </div>

            <div>
              <div class="row">
                <div class="col-md-12">
                  <div class="field form-group">
                    <!--<%= form.label :en_name %>-->
                    <%= form.text_field :ko_name, placeholder: "Title", class: "message-title" %>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="field form-group">
                    <%= form.label :ko_content %>
                    <%= form.rich_text_area :ko_content, placeholder: "ko_content" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% if current_user.try(:admin?) %>
          <div class="col-md-8 col-md-offset-2">
            <div class="col-md-5 col-md-offset-1">  
              <div class="field form-group">
                <%= form.label :category %>
                <%= form.select :category, ['build_resilience', 'get_good_sleep', 'manage_stress', 'strengthen_social_connections', 'help_yourself_help_others', 'other'], class: 'form-control input-lg' %>
              </div>
              <div class="field form-group">
                <%= form.label :featured? %>
                <%= form.check_box :featured %>
              </div>
            </div>
            <div class="col-md-5 col-md-offset-1">
              <div class="field form-group">
                <%= form.label :priority %> 
                <%= form.text_field :priority, :size=>"2" %>
              </div>
              <div class="field form-group">
                <%= form.label :archive? %>
                <%= form.check_box :archive %>
              </div>
            </div>
          </div>

        <div class="col-md-8 col-md-offset-2">
          <div class="field form-group">
            <%= form.label :tags %> Separate each tag with a new line
            <%= form.text_area :tags, name: 'message[tags][]', size: '70x5', class: 'form-control input-lg', placeholder: "cope with loss\nself-care\ntrigger warning\ndepression", value: form.object.tags.join("\n") %>
          </div>
        </div>
        <% end %>

        <div class="col-md-8 col-md-offset-2">
          <div class="actions">
            <%= form.submit class: "btn btn-primary btn-lg btn-block"%>
            <%= link_to 'Back', messages_path, class: "btn btn-primary btn-lg btn-block" %>
          </div>
        </div>

        <% end %>

				<div class="fh5co-spacer fh5co-spacer-sm"></div>
			</div>

		</div>

	</div>
</section>
