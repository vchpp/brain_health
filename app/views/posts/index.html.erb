<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>En post</th>
      <th>Ko post</th>
      <th>Tags</th>
      <th>Category</th>
      <th>Featured</th>
      <th>Archive</th>
      <th>Priority</th>
      <th>Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.en_post %></td>
        <td><%= post.ko_post %></td>
        <td><%= post.tags %></td>
        <td><%= post.category %></td>
        <td><%= post.featured %></td>
        <td><%= post.archive %></td>
        <td><%= post.priority %></td>
        <td><%= post.approved %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
