<p id="notice"><%= notice %></p>

<h1>Boards</h1>

<table>
  <thead>
    <tr>
      <th>En post</th>
      <th>Ko post</th>
      <th>Tags</th>
      <th>Category</th>
      <th>Featured</th>
      <th>Archive</th>
      <th>Priority</th>
      <th>Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.en_post %></td>
        <td><%= board.ko_post %></td>
        <td><%= board.tags %></td>
        <td><%= board.category %></td>
        <td><%= board.featured %></td>
        <td><%= board.archive %></td>
        <td><%= board.priority %></td>
        <td><%= board.approved %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

